pipeline {
  agent any

  environment {
    VIRTUAL_ENV = 'venv'
    PYTHON = "${env.WORKSPACE}\\${VIRTUAL_ENV}\\Scripts\\python.exe"
    PIP    = "${env.WORKSPACE}\\${VIRTUAL_ENV}\\Scripts\\pip.exe"
    PYTEST = "${env.WORKSPACE}\\${VIRTUAL_ENV}\\Scripts\\pytest.exe"
    FLAKE8 = "${env.WORKSPACE}\\${VIRTUAL_ENV}\\Scripts\\flake8.exe"
    COVER  = "${env.WORKSPACE}\\${VIRTUAL_ENV}\\Scripts\\coverage.exe"
    BANDIT = "${env.WORKSPACE}\\${VIRTUAL_ENV}\\Scripts\\bandit.exe"
  }

  stages {
    stage('Setup') {
      steps {
        bat '''
          if not exist "%VIRTUAL_ENV%" (
            python -m venv %VIRTUAL_ENV%
          )
          call %VIRTUAL_ENV%\\Scripts\\activate.bat
          "%PIP%" install --upgrade pip
          "%PIP%" install -r requirements.txt
        '''
      }
    }

    stage('Lint') {
      steps {
        bat '''
          call %VIRTUAL_ENV%\\Scripts\\activate.bat
          "%FLAKE8%" app.py
        '''
      }
    }

    stage('Test') {
      steps {
        bat '''
          call %VIRTUAL_ENV%\\Scripts\\activate.bat
          "%PYTEST%" -q
        '''
      }
      post {
        always {
          junit allowEmptyResults: true, testResults: '**/junit*.xml'
        }
      }
    }

    stage('Coverage') {
      steps {
        bat '''
          call %VIRTUAL_ENV%\\Scripts\\activate.bat
          "%COVER%" run -m pytest
          "%COVER%" report -m
          "%COVER%" html -d coverage_html
        '''
      }
      post {
        always {
          archiveArtifacts artifacts: 'coverage_html/**', fingerprint: true, onlyIfSuccessful: false
        }
      }
    }

    stage('Security Scan') {
      steps {
        bat '''
          call %VIRTUAL_ENV%\\Scripts\\activate.bat
          "%BANDIT%" -r . -f txt -o bandit_report.txt || exit 0
        '''
      }
      post {
        always {
          archiveArtifacts artifacts: 'bandit_report.txt', fingerprint: true, onlyIfSuccessful: false
        }
      }
    }

    stage('Deploy') {
      steps {
        bat '''
          call %VIRTUAL_ENV%\\Scripts\\activate.bat
          echo Packaging artifact...
          if not exist dist mkdir dist
          "%PYTHON%" -c "from app import greet; print(greet('World'))" > dist\\deploy_output.txt
        '''
      }
      post {
        always {
          archiveArtifacts artifacts: 'dist/**', fingerprint: true, onlyIfSuccessful: false
          echo 'Deploying application...'
        }
      }
    }
  }

  post {
    always {
      cleanWs()
    }
  }
}
